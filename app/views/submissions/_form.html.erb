<%= form_for(@submission, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @submission.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h4>

      <ul>
      <% @submission.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :portal, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :portal, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :host, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :host, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ip, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :ip, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :uuid, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :uuid, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :request_method, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :request_method, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content_type, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :content_type, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content_length, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :content_length, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :headers, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :headers, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :successful_replies_count, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :successful_replies_count, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :failed_replies_count, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :failed_replies_count, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
