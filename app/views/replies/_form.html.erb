<%= form_for(@reply, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @reply.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@reply.errors.count, "error") %> prohibited this reply from being saved:</h4>

      <ul>
      <% @reply.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :destination, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :destination, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :submission, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :submission, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :http_status_code, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :http_status_code, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content_length, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :content_length, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content_type, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :content_type, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :headers, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :headers, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :processed_at, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :processed_at, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
