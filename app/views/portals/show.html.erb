<div class="page-header">
  <%= link_to portals_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_portal_path(@portal), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show portal</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @portal.title %></dd>

  <dt>Slug:</dt>
  <dd><%= @portal.slug %></dd>

  <dt>Destinations count:</dt>
  <dd><%= @portal.destinations_count %></dd>

</dl>
